FoamFile
{
    version     2.0;
    format      binary;
    class       volScalarField;
    location    "0";
    object      alphat;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    sides
    {
        type            empty;
    }
    inlet
    {
        type            calculated;
        value           uniform 0;
    }
    buildings
    {
        type            alphatJayatillekeWallFunction;
	Prt		0.85;
        value           uniform 0;
    }
	roads
    {
        type            alphatJayatillekeWallFunction;
	Prt		0.85;
        value           uniform 0;
    }
    outlet
    {
        type            calculated;
	value		uniform 0;
    }
    atmosphere
    {
        type            symmetry;
    }
}


